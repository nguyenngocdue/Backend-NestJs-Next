generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id           Int      @id @default(autoincrement())
  name         String?  @db.VarChar(255)
  price        String?  @db.VarChar(255)
  manufacturer String?  @db.VarChar(255)
  attributes   Json?    @db.Json
  orders       orders[]
}

model customers {
  customer_id Int      @id @default(autoincrement())
  name        String?  @db.VarChar(255)
  email       String?  @db.VarChar(255)
  phone       String?  @db.VarChar(20)
  orders      orders[]
}

model orders {
  order_id    Int        @id @default(autoincrement())
  customer_id Int?
  product_id  Int?
  order_date  DateTime?  @db.Timestamp(6)
  quantity    Int?
  customers   customers? @relation(fields: [customer_id], references: [customer_id], onDelete: NoAction, onUpdate: NoAction, map: "fk_customer")
  products    products?  @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_product")
}

model users {
  user_id    Int       @id @default(autoincrement())
  username   String    @db.VarChar(50)
  password   String    @db.VarChar(255)
  email      String?   @db.VarChar(255)
  role       String?   @db.VarChar(50)
  created_at DateTime? @default(now()) @db.Timestamp(6)
}
